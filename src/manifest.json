{
	"manifest_version": 2,
	"name": "Keywords Highlighter",
	"short_name": "Keywords Highlighter",
	"description": "Automatically highlights given keywords on web pages.",
	"version": "0.0.0",
	"icons": {
		"64": "icons/icon.png"
	},
	"permissions": ["tabs"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"],
			"css": ["content.css"]
		}
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_title": "Keywords Highlighter",
		"default_popup": "popup.html"
	},
	"options_page": "options.html"
}
